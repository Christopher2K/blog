---
import { css } from "@/style/css";
import Navigation from "@/components/Navigation.astro";
import Footer from "@/components/Footer.astro";

import Base from "./Base.astro";

interface Props {
  title: string;
  description?: string;
  forceUseDefaultOgTitle?: boolean;
  frUrl: string;
  enUrl: string;
}

const { title, description, forceUseDefaultOgTitle, frUrl, enUrl } =
  Astro.props;
---

<Base {title} {description} {forceUseDefaultOgTitle} ogType="article">
  <Navigation {frUrl} {enUrl} />
  <main
    class={css({
      px: "6",
      w: "full",
    })}
  >
    <header class={css({ w: "full" })}>
      <slot name="header" />
    </header>

    <div
      class={css({
        flex: "1",
        w: "full",
        mx: "auto",

        // Content styling
        // HEADINGS
        "& h1, & h2, & h3, & h4": {
          w: "full",
        },
        "& h1": {
          textStyle: "h1",
          my: 14,
        },
        "& h2": {
          textStyle: "h2",
          mt: 12,
          mb: 8,
        },
        "& h3": {
          textStyle: "h3",
          mt: 10,
          mb: 6,
        },
        "& h4": {
          textStyle: "h4",
          mt: 8,
          mb: 4,
        },

        // TEXT
        "& p, & a, & li": {
          textStyle: "body",
        },

        "& a": {
          textDecoration: "underline",
        },

        // OTHERS
        "& img": {
          my: 10,
          mx: "auto",
          md: {
            maxWidth: "80%",
          },
        },

        "& img:not(.image-square)": {
          md: {
            maxWidth: "80%",
          },
        },

        "& .image-square": {
          maxWidth: "300px",
        },

        "& pre": {
          fontSize: "1.125rem",
          p: 4,
          borderRadius: "md",
          overflow: "auto",
        },

        "& ul, & ol": {
          px: "4",
        },

        "& ul": {
          listStyle: "inside disc",
        },

        "& ol": {
          listStyle: "inside decimal",
        },

        "& p, & ul, & ol, & pre": {
          my: 4,
        },

        "& p code, & li code": {
          display: "inline-block",
          backgroundColor: "neutral.200",
          px: 2,
          borderRadius: "md",
        },

        "& blockquote": {
          borderLeft: "6px solid #000",
          backgroundColor: "gray.100",
          color: "gray.800",
          pl: "4",
          py: "4",
          my: 8,
        },
      })}
    >
      <slot />
    </div>
    <Footer />
  </main>
</Base>
